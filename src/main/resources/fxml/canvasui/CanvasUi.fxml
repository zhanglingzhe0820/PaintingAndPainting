<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXColorPicker?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.jensd.fx.glyphs.materialicons.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.*?>
<?import surevil.paintingandpainting.presentation.component.*?>
<StackPane fx:id="container" alignment="TOP_CENTER" prefHeight="800" prefWidth="1475"
           xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="surevil.paintingandpainting.presentation.canvasui.CanvasUiController"
           onKeyPressed="#onHotKeyPressed">
    <HBox>
        <VBox>
            <JFXColorPicker fx:id="colorPicker" onAction="#onColorChanged"/>
            <Label fx:id="brushSizeLabel" style="-fx-font-weight: bold">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Label>
            <VBox spacing="20.0" style="-fx-background-color: rgba(132,134,133,0.95);-fx-text-alignment: right">
                <ContactableButton fx:id="btnAddSize" buttonType="RAISED" onMouseClicked="#onBtnIncreaseSizeClicked"
                                   style="-fx-background-color: #999630; -fx-text-fill: #FFFFFF" text="增大">
                    <graphic>
                        <MaterialIconView glyphName="ADD" glyphSize="24" glyphStyle="-fx-fill: #FFFFFF"/>
                    </graphic>
                </ContactableButton>
                <ContactableButton buttonType="RAISED" onMouseClicked="#onBtnDecreaseSizeClicked"
                                   style="-fx-background-color: #999630; -fx-text-fill: #FFFFFF" text="减小">
                    <graphic>
                        <FontAwesomeIconView glyphName="MINUS" glyphSize="24"
                                             glyphStyle="-fx-fill: #FFFFFF"/>
                    </graphic>
                </ContactableButton>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </VBox>
            <VBox spacing="20.0" style="-fx-background-color: rgba(132,134,133,0.95);-fx-text-alignment: right">
                <ContactableButton buttonType="RAISED" onMouseClicked="#onBtnSelectClicked"
                                   style="-fx-background-color: #339900; -fx-text-fill: #FFFFFF" text="选中">
                    <graphic>
                        <MaterialIconView glyphName="CHECK_BOX_OUTLINE_BLANK" glyphSize="24"
                                          glyphStyle="-fx-fill: #FFFFFF"/>
                    </graphic>
                </ContactableButton>
                <ContactableButton buttonType="RAISED" onMouseClicked="#onBtnEditClicked"
                                   style="-fx-background-color: #000000; -fx-text-fill: #FFFFFF" text="绘图">
                    <graphic>
                        <MaterialIconView glyphName="EDIT" glyphSize="24" glyphStyle="-fx-fill: #FFFFFF"/>
                    </graphic>
                </ContactableButton>
                <ContactableButton buttonType="RAISED" onMouseClicked="#onBtnEraseClicked"
                                   style="-fx-background-color: #FFFFFF; -fx-text-fill: #000000" text="擦除">
                    <graphic>
                        <MaterialIconView glyphName="PHONELINK_ERASE" glyphSize="24" glyphStyle="-fx-fill: #000000"/>
                    </graphic>
                </ContactableButton>
                <ContactableButton buttonType="RAISED" onMouseClicked="#onBtnRevertClicked"
                                   style="-fx-background-color: #9999CC; -fx-text-fill: #FFFFFF" text="回撤">
                    <graphic>
                        <MaterialIconView glyphName="RESTORE" glyphSize="24" glyphStyle="-fx-fill: #FFFFFF"/>
                    </graphic>
                </ContactableButton>
                <ContactableButton buttonType="RAISED" onMouseClicked="#onBtnResetClicked"
                                   style="-fx-background-color: #e64a19; -fx-text-fill: #FFFFFF" text="重置">
                    <graphic>
                        <MaterialIconView glyphName="REFRESH" glyphSize="24" glyphStyle="-fx-fill: #FFFFFF"/>
                    </graphic>
                </ContactableButton>
                <ContactableButton buttonType="RAISED" onMouseClicked="#onBtnSubmitClicked"
                                   style="-fx-background-color: #3F51B5; -fx-text-fill: #FFFFFF" text="提交">
                    <graphic>
                        <MaterialIconView glyphName="CHECK" glyphSize="24" glyphStyle="-fx-fill: #FFFFFF"/>
                    </graphic>
                </ContactableButton>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
            </VBox>
            <HBox.margin>
                <Insets top="20.0"/>
            </HBox.margin>
        </VBox>
        <HBox>
            <StackPane>
                <Canvas fx:id="canvas" height="810" onMouseDragged="#draw" onMouseReleased="#exitDraw" width="700"/>
                <Canvas fx:id="fakeCanvas" height="810" onMouseDragged="#draw" onMouseReleased="#exitDraw" width="700"/>
            </StackPane>
            <Separator orientation="VERTICAL"/>
            <StackPane>
                <Canvas fx:id="perfectCanvas" height="810" width="700"/>
            </StackPane>
        </HBox>
    </HBox>
</StackPane>
